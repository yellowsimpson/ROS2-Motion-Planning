<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="mobile_base_to_ur_robotiq" params="prefix parent child rotation:=^|${0.0}">

    <joint name="${prefix}mobile_base_to_ur_robotiq" type="fixed">
      <!-- The parent link must be read from the robot model it is attached to. -->
      <parent link="${parent}"/>
      <child link="${prefix}mobile_base_to_ur_robotiq_link"/>
      <origin xyz="0 0 0" rpy="0 0 ${rotation}"/>
    </joint>

    <!-- Temporarily use the robotiq adapter  -->
    <link name="${prefix}mobile_base_to_ur_robotiq_link">
        <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
            <mesh filename="file://$(find robotiq_description)/meshes/visual/2f_85/ur_to_robotiq_adapter.dae"/>
          </geometry>
        </visual>
        <collision>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="file://$(find robotiq_description)/meshes/collision/2f_85/ur_to_robotiq_adapter.stl"/>
          </geometry>
        </collision>
        <inertial>
          <mass value="0.01" />
          <origin xyz="0 0 0" />
          <inertia ixx="0.000044" ixy="0.0" ixz="0.0" iyy="0.000027" iyz="0.0" izz="0.000027" />
        </inertial>
    </link>

    <joint name="${prefix}ur_robotiq_side_joint" type="fixed">
      <parent link="${prefix}mobile_base_to_ur_robotiq_link"/>
      <child link="${child}"/>
      <!-- <origin xyz="0 0 0.011" rpy="0 ${-pi/2} ${pi/2}"/> -->
      <origin xyz="0 0 0.011" rpy="0 0 0"/>
    </joint>
    
    <link name="${child}"/>

  </xacro:macro>
</robot>
